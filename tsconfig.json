{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "NodeNext",                               
    "moduleResolution": "NodeNext",                    
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                     
    "skipLibCheck": true,
    "outDir": "./build",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false                                
  },
  "include": ["./src"]
}
